<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CampoTextoCeleste" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#00ffff</item>
        <item name="colorControlActivated">#0acfde</item>
        <item name="android:textColorHighlight">#c126d0d9</item>
    </style>
    <style name="CampoTextoCelesteSmall" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#00ffff</item>
        <item name="colorControlActivated">#0acfde</item>
        <item name="android:textColorHighlight">#c126d0d9</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="URL" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#09a5cc</item>
        <item name="android:textSize">12dp</item>
    </style>

</resources>
